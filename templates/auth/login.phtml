{{ include('header-login.phtml') }}

<main>
  <div class="container login">
    <div class="row">
      <h1>Fa√ßa login</h1>
    </div>
    {% if error != '' %}
      <div class="row">
        <div class="col s12 m6">
          <div class="card red darken-1">
            <div class="card-content white-text">
              <p>{{ error }}</p>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

    <div class="row">
      <form action="{{ path_for('auth.login.post') }}" method="POST" class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="cpf" type="text" required="true" name="cpf" class="validate cpf" value="{{ actualFields.cpf }}">
            <label for="cpf">CPF</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" required="true" class="validate" value="">
            <label for="password">Senha</label>
          </div>
        </div>
    </div>

        <button class="waves-effect waves-light btn-large green darken-1" type="submit" name="action" value="entrar">Entrar</button>
    </div>
  </div>

